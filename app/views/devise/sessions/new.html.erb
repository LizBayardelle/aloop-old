<div class="row devise-page" style="padding-top: 40px">
	<div class="col-xs-12 col-sm-6 col-sm-push-3 blue-box text-center">
		<div class="row">
			<h2>Log In</h2>
			<p class="col-xs-10 col-xs-push-1">Sign in to your account to make an order, see your previous orders, or view your account details.</p>
		</div>

		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  	<div class="form-inputs text-left">
			  	<div class="form-group">
				    <%= f.label :email %>
				    <%= f.email_field :email, required: false, autofocus: true, class: "form-control" %>
			    </div>
			    <div class="form-group">
				    <%= f.label :password %>
			    	<%= f.password_field :password, required: false, class: "form-control" %>
		    	</div>
		  	</div>
			<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		  <div class="form-actions">
		    <%= f.button :submit, "Log In" %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div> <!-- blue box -->
</div> <!-- row -->

<script type="text/javascript">
  $(document).ready(function(){
    $(".footer").removeClass("top-shadow-inset");
  });
</script>