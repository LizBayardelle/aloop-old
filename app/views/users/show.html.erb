<div class="hero-image-row">
  <div class="hero-image-outer text-center">
    <div class="hero-image-inner text-center">
      <%= image_tag "polaris_8.jpg", class: "hero-image", alt: "Asphalt road with clouds." %>
    </div> <!-- hero-image-inner -->
  </div> <!-- hero-image-inner -->
</div> <!-- row -->

<div class="overlap-hero-image">
  <div class="index-text row">
    <h2>My Account</h2>
  </div> <!-- index text row -->
</div> <!-- overlap hero image -->


<div class="text-center header-row row" style="margin-top: 30px">
	<p><%= link_to "Edit My Information", edit_user_registration_path %> | 
	<%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %></p>
</div> <!-- centered header -->

<div class="container">
	<h4><strong>Client: </strong><%= @user.first_name %> <%= @user.last_name %></h4>
	<h4><strong>Email Address: </strong><%= @user.email %></h4>
	<h4><strong>Phone: </strong><%= @user.phone %></h4>
</div> <!-- page container -->
