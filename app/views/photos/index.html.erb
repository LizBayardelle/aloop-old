                           <h3><strong>Submitted by: </strong><%= photo.user.first_name %></h3>
                      <% end %>
                      <% if current_user && current_user.admin %>
                          <div class="row">
                            <div class="col-xs-4 col-sm-2 col-sm-push-3">
                              <%= link_to edit_photo_path(photo) do %>
                                    <i class="icon large ion-edit"></i>
                                    <br>Edit This Photo
                              <% end %>
                            </div> <!-- column -->
                            <div class="col-xs-4 col-sm-2 col-sm-push-3">
                              <%= link_to unapprove_photo_path(photo), method: :put, style: "color: orange" do %>
                                <i class="icon large ion-close"></i>
                                <br>Unapprove This Photo
                              <% end %>
                            </div> <!-- column -->
                            <div class="col-xs-4 col-sm-2 col-sm-push-3">
                              <%= link_to photo_path(photo), method: :delete, data: {confirm: "Are you sure you want to delete this photo?"}, style: "color: red" do %>
                                <i class="icon large ion-trash-a"></i>
                                <br>Delete This Photo
                              <% end %>
                            </div> <!-- column -->
                          </div> <!-- approval row -->
                      <% end %>
                 </div> <!-- mfp contents -->
            <% end %>
       </div> <!-- kit 2 div -->

       <div class="kit_3_div hidden">
            <% @kit_3_photos.each do |photo| %>

                 <div class="col-xs-4 col-sm-3 col-md-2 col-lg-1 big-div">
                      <a href="#<%= photo.id %>" class="open-popup-link">
                           <div class="snapshot">
                                <%= image_tag photo.image.url, alt: photo.user.last_name %>
                           </div> <!-- snapshot -->
                      </a>
                 </div> <!-- column -->

                 <div id="<%= photo.id %>" class="image-popup mfp-hide text-center">
                      <%= image_tag photo.image.url, alt: photo.user.last_name, class: "popup-picture", style: "margin-bottom: 30px" %>
                      <p><%= photo.comments %></p>
                      <% if !photo.user.admin %>
                           <h3><strong>Submitted by: </strong><%= photo.user.first_name %></h3>
                      <% end %>
                      <% if current_user && current_user.admin %>
                          <div class="row">
                            <div class="col-xs-4 col-sm-2 col-sm-push-3">
                              <%= link_to edit_photo_path(photo) do %>
                                    <i class="icon large ion-edit"></i>
                                    <br>Edit This Photo
                              <% end %>
                            </div> <!-- column -->
                            <div class="col-xs-4 col-sm-2 col-sm-push-3">
                              <%= link_to unapprove_photo_path(photo), method: :put, style: "color: orange" do %>
                                <i class="icon large ion-close"></i>
                                <br>Unapprove This Photo
                              <% end %>
                            </div> <!-- column -->
                            <div class="col-xs-4 col-sm-2 col-sm-push-3">
                              <%= link_to photo_path(photo), method: :delete, data: {confirm: "Are you sure you want to delete this photo?"}, style: "color: red" do %>
                                <i class="icon large ion-trash-a"></i>
                                <br>Delete This Photo
                              <% end %>
                            </div> <!-- column -->
                          </div> <!-- approval row -->
                      <% end %>  
                 </div> <!-- mfp contents -->
            <% end %>
       </div> <!-- kit 3 div -->

  </div> <!-- container -->
</div> <!-- white row -->



<script type="text/javascript">
  $('.open-popup-link').magnificPopup({
    type:'inline',
    midClick: true
  });
  $(document).ready(function(){
     $("#kit_1_tab").click(function(){
          $("#kit_1_tab").addClass("active");
          $("#kit_2_tab").removeClass("active");
          $("#kit_3_tab").removeClass("active");
          $(".kit_1_div").removeClass("hidden");
          $(".kit_2_div").addClass("hidden");
          $(".kit_3_div").addClass("hidden");
     });
     $("#kit_2_tab").click(function(){
          $("#kit_1_tab").removeClass("active");
          $("#kit_2_tab").addClass("active");
          $("#kit_3_tab").removeClass("active");
          $(".kit_1_div").addClass("hidden");
          $(".kit_2_div").removeClass("hidden");
          $(".kit_3_div").addClass("hidden");
     });
     $("#kit_3_tab").click(function(){
          $("#kit_1_tab").removeClass("active");
          $("#kit_2_tab").removeClass("active");
          $("#kit_3_tab").addClass("active");
          $(".kit_1_div").addClass("hidden");
          $(".kit_2_div").addClass("hidden");
          $(".kit_3_div").removeClass("hidden");
     });
  });
</script>
